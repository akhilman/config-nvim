{
  "pylsp.plugins.pylint.enabled": true,
  "pylsp.plugins.pyflakes.enabled": false,
  "pylsp.plugins.pyls_mypy.enabled": true,
  "pylsp.plugins.pyls_mypy.live_mode": false,
  "pylsp.plugins.isort.enabled": true,
  "deno": {
    "enable": true,
    "lint": true
  },
  "rust.clippy_preference": true,
  "rust-analyzer": {
    "inlineHints": {
      "enable": true,
      "chainingHints": true,
      "typeHints": true,
      "parameterHints": true
    }
  }
}
